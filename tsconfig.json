{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "remove",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"paths": {
			/* server */
			"!server/*": ["src/types/*"],
			"^server/*": ["src/validation/*"],
			"~server/*": ["src/docs/*"],
			"&server/*": ["src/config/*"],
			"#server/*": ["src/models/*"],
			"$server/*": ["src/log/*"],
			"@server/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["vitest/globals"]
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}

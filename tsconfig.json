{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "remove",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"paths": {
			"!common/*": ["common/types/*"],
			"^common/*": ["common/validation/*"],
			"#common/*": ["common/models/*"],
			"$common/*": ["common/schemas/*"],
			"@common/*": ["common/*"],
			/* server */
			"!server/*": ["src/types/*"],
			"^server/*": ["src/validation/*"],
			"#server/*": ["src/models/*"],
			"~server/*": ["src/docs/*"],
			"&server/*": ["src/config/*"],
			"$server/*": ["src/log/*"],
			"@server/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["vitest/globals"]
	},
	"exclude": ["node_modules", "common/lib"],
	"include": ["src/**/*", "common/**/*", "cli/**/*"]
}

{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noForEach": "off"
			},
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "warn"
			},
			"suspicious": {
				"noConfusingVoidType": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"arrowParentheses": "asNeeded"
		}
	}
}
